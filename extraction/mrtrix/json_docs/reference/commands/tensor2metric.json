{
  "name": "tensor2metric",
  "synopsis": "Generate maps of tensor-derived parameters",
  "requires_at_least_one_argument": true,
  "author": "Thijs Dhollander (thijs.dhollander@gmail.com) & Ben Jeurissen (ben.jeurissen@uantwerpen.be) & J-Donald Tournier (jdtournier@gmail.com)",
  "version": "3.0.4",
  "copyright": "Copyright (c) 2008-2024 the MRtrix3 contributors.\n\nThis Source Code Form is subject to the terms of the Mozilla Public\nLicense, v. 2.0. If a copy of the MPL was not distributed with this\nfile, You can obtain one at http://mozilla.org/MPL/2.0/.\n\nCovered Software is provided under this License on an \"as is\"\nbasis, without warranty of any kind, either expressed, implied, or\nstatutory, including, without limitation, warranties that the\nCovered Software is free of defects, merchantable, fit for a\nparticular purpose or non-infringing.\nSee the Mozilla Public License v. 2.0 for more details.\n\nFor more details, see http://www.mrtrix.org/.\n",
  "description": [
  ],
  "references": [
     "Basser, P. J.; Mattiello, J. & Lebihan, D. MR diffusion tensor spectroscopy and imaging. Biophysical Journal, 1994, 66, 259-267",
     "Westin, C. F.; Peled, S.; Gudbjartsson, H.; Kikinis, R. & Jolesz, F. A. Geometrical diffusion measures for MRI from tensor basis analysis. Proc Intl Soc Mag Reson Med, 1997, 5, 1742"
  ],
  "examples": [
  ],
  "arguments": [
    {
      "id": "tensor",
      "description": "the input tensor image.",
      "type": "image in",
      "optional": false,
      "allow_multiple": false
    }
  ],
  "option_groups": [
    {
      "name": "OPTIONS",
      "options": [
        {
          "id": "adc",
          "description": "compute the mean apparent diffusion coefficient (ADC) of the diffusion tensor. (sometimes also referred to as the mean diffusivity (MD))",
          "optional": true,
          "allow_multiple": false,
          "arguments": [
            {
              "id": "image",
              "description": "",
              "type": "image out",
              "optional": false,
              "allow_multiple": false
            }
          ]
        },
        {
          "id": "fa",
          "description": "compute the fractional anisotropy (FA) of the diffusion tensor.",
          "optional": true,
          "allow_multiple": false,
          "arguments": [
            {
              "id": "image",
              "description": "",
              "type": "image out",
              "optional": false,
              "allow_multiple": false
            }
          ]
        },
        {
          "id": "ad",
          "description": "compute the axial diffusivity (AD) of the diffusion tensor. (equivalent to the principal eigenvalue)",
          "optional": true,
          "allow_multiple": false,
          "arguments": [
            {
              "id": "image",
              "description": "",
              "type": "image out",
              "optional": false,
              "allow_multiple": false
            }
          ]
        },
        {
          "id": "rd",
          "description": "compute the radial diffusivity (RD) of the diffusion tensor. (equivalent to the mean of the two non-principal eigenvalues)",
          "optional": true,
          "allow_multiple": false,
          "arguments": [
            {
              "id": "image",
              "description": "",
              "type": "image out",
              "optional": false,
              "allow_multiple": false
            }
          ]
        },
        {
          "id": "cl",
          "description": "compute the linearity metric of the diffusion tensor. (one of the three Westin shape metrics)",
          "optional": true,
          "allow_multiple": false,
          "arguments": [
            {
              "id": "image",
              "description": "",
              "type": "image out",
              "optional": false,
              "allow_multiple": false
            }
          ]
        },
        {
          "id": "cp",
          "description": "compute the planarity metric of the diffusion tensor. (one of the three Westin shape metrics)",
          "optional": true,
          "allow_multiple": false,
          "arguments": [
            {
              "id": "image",
              "description": "",
              "type": "image out",
              "optional": false,
              "allow_multiple": false
            }
          ]
        },
        {
          "id": "cs",
          "description": "compute the sphericity metric of the diffusion tensor. (one of the three Westin shape metrics)",
          "optional": true,
          "allow_multiple": false,
          "arguments": [
            {
              "id": "image",
              "description": "",
              "type": "image out",
              "optional": false,
              "allow_multiple": false
            }
          ]
        },
        {
          "id": "value",
          "description": "compute the selected eigenvalue(s) of the diffusion tensor.",
          "optional": true,
          "allow_multiple": false,
          "arguments": [
            {
              "id": "image",
              "description": "",
              "type": "image out",
              "optional": false,
              "allow_multiple": false
            }
          ]
        },
        {
          "id": "vector",
          "description": "compute the selected eigenvector(s) of the diffusion tensor.",
          "optional": true,
          "allow_multiple": false,
          "arguments": [
            {
              "id": "image",
              "description": "",
              "type": "image out",
              "optional": false,
              "allow_multiple": false
            }
          ]
        },
        {
          "id": "num",
          "description": "specify the desired eigenvalue/eigenvector(s). Note that several eigenvalues can be specified as a number sequence. For example, '1,3' specifies the principal (1) and minor (3) eigenvalues/eigenvectors (default = 1).",
          "optional": true,
          "allow_multiple": false,
          "arguments": [
            {
              "id": "sequence",
              "description": "",
              "type": "int seq",
              "optional": false,
              "allow_multiple": false
            }
          ]
        },
        {
          "id": "modulate",
          "description": "specify how to modulate the magnitude of the eigenvectors. Valid choices are: none, FA, eigval (default = FA).",
          "optional": true,
          "allow_multiple": false,
          "arguments": [
            {
              "id": "choice",
              "description": "",
              "type": "choice",
              "optional": false,
              "allow_multiple": false
            }
          ]
        },
        {
          "id": "mask",
          "description": "only perform computation within the specified binary brain mask image.",
          "optional": true,
          "allow_multiple": false,
          "arguments": [
            {
              "id": "image",
              "description": "",
              "type": "image in",
              "optional": false,
              "allow_multiple": false
            }
          ]
        }
      ]
    },
    {
      "name": "__standard_options",
      "options": [
