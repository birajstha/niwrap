{
  "tool-version": "1.0",
  "name": "SUMA_glxdino",
  "author": "Mark J. Kilgard",
  "description": "A simple openGL test program using GLX. If it does not run, then SUMA certainly won't.",
  "url": "https://example.com",
  "command-line": "SUMA_glxdino [VERBOSE_FLAG]",
  "container-image": {
    "image": "example/docker-suma_glxdino:latest",
    "index": "index.docker.io",
    "type": "docker"
  },
  "inputs": [
    {
      "command-line-flag": "-v",
      "description": "Switch on diagnostic messages",
      "value-key": "[VERBOSE_FLAG]",
      "type": "Flag",
      "optional": true,
      "id": "verbose",
      "name": "Verbose Flag"
    }
  ],
  "schema-version": "0.5"
}
