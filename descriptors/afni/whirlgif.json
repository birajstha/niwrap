{
  "tool-version": "1.0.0",
  "name": "whirlgif",
  "author": "Kevin Kadow, Mark Podlipec",
  "descriptor-url": "http://web.mit.edu/javalib/working/animated-gifs/whirlgif/whirlgif.newdoc",
  "description": "A quick program that reads a series of GIF files and produces a single GIF file composed of those images.",
  "url": "https://www.freshports.org/graphics/whirlgif/",
  "command-line": "whirlgif [VERBOSE_FLAG] [LOOP_FLAG] [TRANS_INDEX] [INTER_FRAME_DELAY] [OUTFILE] [INFILE] [GIF_FILES]",
  "container-image": {
    "image": "whirlgif:latest",
    "index": "index.docker.io",
    "type": "docker"
  },
  "inputs": [
    {
      "command-line-flag": "-v",
      "description": "Verbose mode",
      "value-key": "[VERBOSE_FLAG]",
      "type": "Flag",
      "optional": true,
      "id": "verbose",
      "name": "Verbose Flag"
    },
    {
      "command-line-flag": "-loop",
      "description": "Add the Netscape 'loop' extension. Optionally specify a loop count.",
      "value-key": "[LOOP_FLAG]",
      "type": "String",
      "optional": true,
      "id": "loop",
      "name": "Loop Flag"
    },
    {
      "command-line-flag": "-trans",
      "description": "Set the colormap index 'index' to be transparent.",
      "value-key": "[TRANS_INDEX]",
      "type": "Number",
      "optional": true,
      "id": "transparency_index",
      "name": "Transparency Index"
    },
    {
      "command-line-flag": "-time",
      "description": "Inter-frame timing delay.",
      "value-key": "[INTER_FRAME_DELAY]",
      "type": "Number",
      "optional": true,
      "id": "inter_frame_delay",
      "name": "Inter-frame Delay"
    },
    {
      "command-line-flag": "-o",
      "description": "Specify the output file to write the results to.",
      "value-key": "[OUTFILE]",
      "type": "String",
      "optional": true,
      "id": "outfile",
      "name": "Output File"
    },
    {
      "command-line-flag": "-i",
      "description": "Read a list of filenames from a file.",
      "value-key": "[INFILE]",
      "type": "File",
      "optional": true,
      "id": "infile",
      "name": "Input File List"
    },
    {
      "description": "Input GIF files to be combined into a single GIF file.",
      "value-key": "[GIF_FILES]",
      "type": "File",
      "list": true,
      "optional": false,
      "id": "gif_files",
      "name": "Input GIF Files"
    }
  ],
  "schema-version": "0.5",
  "output-files": [
    {
      "path-template": "[OUTFILE]",
      "description": "The output GIF file",
      "optional": true,
      "id": "output_gif",
      "name": "Output GIF File"
    }
  ]
}
