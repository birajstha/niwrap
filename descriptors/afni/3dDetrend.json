{
  "name": "3dDetrend",
  "command-line": "3dDetrend [IN_FILE] [NUM_THREADS] [OUT_FILE] [OUTPUTTYPE]",
  "author": "Nipype (interface)",
  "description": "This program removes components from voxel time series using linear least squares",
  "url": "https://afni.nimh.nih.gov/pub/dist/doc/program_help/3dDetrend.html",
  "inputs": [
    {
      "id": "in_file",
      "name": "In file",
      "type": "File",
      "value-key": "[IN_FILE]",
      "description": "Input file to 3ddetrend.",
      "optional": false
    },
    {
      "id": "num_threads",
      "name": "Num threads",
      "type": "Number",
      "integer": true,
      "value-key": "[NUM_THREADS]",
      "description": "Set number of threads.",
      "optional": true,
      "default-value": 1
    },
    {
      "id": "outputtype",
      "name": "Outputtype",
      "type": "String",
      "value-key": "[OUTPUTTYPE]",
      "description": "'nifti' or 'afni' or 'nifti_gz'. Afni output filetype.",
      "optional": true,
      "value-choices": ["NIFTI", "AFNI", "NIFTI_GZ"]
    }
  ],
  "output-files": [
    {
      "name": "Out file",
      "id": "out_file",
      "optional": true,
      "description": "Output image file name.",
      "path-template": "[IN_FILE]_detrend",
      "value-key": "[OUT_FILE]",
      "command-line-flag": "-prefix"
    },
    {
      "name": "Out file",
      "id": "out_file",
      "path-template": "out_file",
      "optional": true,
      "description": "Output file."
    }
  ],
  "tool-version": "1.0.0",
  "schema-version": "0.5",
  "container-image": {
    "image": "fcpindi/c-pac:latest",
    "type": "docker"
  },
  "tags": {
    "domain": "neuroinformatics",
    "source": "nipype-interface"
  }
}
