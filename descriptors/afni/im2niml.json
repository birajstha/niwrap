{
  "tool-version": "1.0.0",
  "name": "im2niml",
  "author": "RW Cox",
  "description": "Converts the input image(s) to a text-based NIML element and writes the result to stdout.",
  "command-line": "im2niml [INPUT_FILE] [MORE_INPUT_FILES]",
  "inputs": [
    {
      "description": "Input image file(s) (e.g. image.jpg)",
      "value-key": "[INPUT_FILE]",
      "type": "File",
      "list": true,
      "optional": false,
      "id": "input_files",
      "name": "Input files"
    }
  ],
  "schema-version": "0.5",
  "output-files": [
    {
      "path-template": "stdout",
      "description": "NIML element",
      "optional": false,
      "id": "niml_output",
      "name": "NIML output"
    }
  ]
}
