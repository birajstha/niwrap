{
  "tool-version": "1.0",
  "name": "help_format",
  "author": "AFNI Team",
  "description": "Formats text by converting URLs into HTML hyperlinks",
  "command-line": "help_format [STDIN]",
  "container-image": {
    "image": "fcpindi/c-pac:latest",
    "type": "docker"
  },
  "inputs": [
    {
      "description": "Standard input text to be formatted",
      "value-key": "[STDIN]",
      "type": "String",
      "optional": false,
      "id": "stdin",
      "name": "Standard Input Text"
    }
  ],
  "schema-version": "0.5",
  "output-files": [
    {
      "path-template": "formatted_output.html",
      "description": "The formatted text with hyperlinks",
      "optional": false,
      "id": "formatted_output",
      "name": "Formatted Output"
    }
  ],
  "url": "https://afni.nimh.nih.gov/pub/dist/doc/program_help/help_format.html"
}
